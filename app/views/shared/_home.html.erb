<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
  <%= image_tag "https://i.imgur.com/LS5DSBe.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Home", grannies_path, class: "nav-link" %>
        </li>
        <li class="nav-item-user">
          <%= link_to current_user.name, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
        <%= image_tag "https://i.imgur.com/TDmkEAV.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <% if current_user.granny.nil? %>
                  <%= link_to "Meet ups", user_path(current_user), class: "dropdown-item" %>
                  <%= link_to "Register as a gran or pop-pop", new_granny_path, class: "dropdown-item" %>
                <% else %>
                  <%= link_to "Meet ups", granny_path(current_user.granny), class: "dropdown-item" %>
            <% end %>
            <%= link_to "Help", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
