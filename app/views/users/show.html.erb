<div class="container">

  <ul>
      <% @appointment.each do |a| %>
      <div class="card mt-4" style="width: 100%;height: 200px">
      <div class="card-body d-flex justify-content-between align-items-start">
        <h5 class="card-title"><%= a.granny.user.name %></h5>
        <div>
          <p class="card-text"><%= a.date %></p>
          <p class="card-text"><%= a.location %></p>
        </div>
        <p class="card-text"><%= a.status %></p>
        <% if a.status = "complete" %>
          <%= link_to "Leave a review", new_review_path %>
        <% end %>
      </div>
      </div>
    <% end %>
  </ul>

</div>
